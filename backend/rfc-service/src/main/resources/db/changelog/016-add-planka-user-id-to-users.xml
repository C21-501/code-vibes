<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="016-add-planka-user-id-to-users" author="integration">
        <comment>Add planka_user_id and email columns to users table for Planka SSO integration</comment>
        
        <!-- Add planka_user_id column -->
        <addColumn tableName="users">
            <column name="planka_user_id" type="VARCHAR(255)">
                <constraints nullable="true" unique="true"/>
            </column>
        </addColumn>

        <!-- Add email column -->
        <addColumn tableName="users">
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="true" unique="true"/>
            </column>
        </addColumn>

        <!-- Create index for planka_user_id -->
        <createIndex tableName="users" indexName="idx_users_planka_user_id">
            <column name="planka_user_id"/>
        </createIndex>

        <!-- Create index for email -->
        <createIndex tableName="users" indexName="idx_users_email">
            <column name="email"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>

