<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="015-add-planka-status-changed-at" author="integration">
        <comment>Add planka_status_changed_at column to track when status was last changed from Planka</comment>
        
        <addColumn tableName="rfc">
            <column name="planka_status_changed_at" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        
        <rollback>
            <dropColumn tableName="rfc" columnName="planka_status_changed_at"/>
        </rollback>
    </changeSet>

</databaseChangeLog>

