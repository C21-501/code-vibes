<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="014-add-planka-card-id-to-rfc" author="integration">
        <comment>Add planka_card_id column to rfc table for Planka integration</comment>
        
        <addColumn tableName="rfc">
            <column name="planka_card_id" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <createIndex tableName="rfc" indexName="idx_rfc_planka_card_id">
            <column name="planka_card_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>

